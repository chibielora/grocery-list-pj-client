<link rel="stylesheet" href="/assets/styles/index.scss">

{{#if signedIn}}

<div class="jumbotron" style="margin-bottom: 0px;">
  {{!-- <h1>Elisted</h1> --}}
  <img src="https://i.imgur.com/EW4RbiP.png" style="">
  {{!-- <p>Your favorite grocery list</p> --}}
</div>
<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
  <button class="navbar-toggler" data-toggle="collapse" data-target="#collapse_target">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapse_target">
    {{!-- <a class="navbar-brand"><img src="myimage.png"></a>
  <span class="navbar-text">Title menu bar</span> --}}
    <ul class="navbar-nav">
{{!-- Dropdown #1 --}}
      <li class="nav-item dropdown"><a class="nav-link dropdown-toggle" data-toggle="dropdown"
          data-target="dropdown_target" href="#">
          My Lists<span class="caret"></span>
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdown_target">
          <a class="dropdown-item" data-toggle="modal" data-target="#list-create-modal">Create New List</a>
          {{!-- <div class="dropdown-divider"></div> --}}
          {{!-- <a class="dropdown-item">See Lists</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item">Delete a List</a> --}}
          {{!-- <a href="#" class="dropdown-item">Edit a List</a> --}}
        </div>
      </li>
{{!-- Dropdown #2 --}}
    <li class="nav-item dropdown"><a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target"
        href="#">
        Change Password<span class="caret"></span>
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdown_target">
        <form id="change-password">
          <fieldset>
          <div class="dropdown-item">
            <input id="old-password" type="password" name="passwords[old]" placeholder="Old Password">
            <div class="dropdown-divider"></div>
            <input id="new-password" type="password" name="passwords[new]" placeholder="New Password">
            <div class="dropdown-divider"></div>
            <input type="submit" value="Change Password" class="btn btn-light" />
          </div>
          </fieldset>
        </form>

      </div>
    </li>
{{!-- Sign Out --}}

      <li class="nav-item"><a id="sign-out" class="nav-link" href="#" type="submit" value="sign-out">Sign Out</a></li>

    </ul>
  </div>
</nav>
<div id="lists-container" class="lists-container"></div>
{{else}}

  <form id="sign-in" class="border m-4 p-2">
  <fieldset>
    <legend>Sign in!</legend>
    <div class="form-group">
      <input type="text" class="form-control" name="credentials[email]" placeholder="Email">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="credentials[password]" placeholder="Password">
    </div>
    <input type="submit" class="btn btn-primary" value="Sign in!">
  </fieldset>
  </form>
  <form id="sign-up" class="border m-4 p-2">
    <fieldset>
     <legend>Sign up!</legend>
    <div class="form-group">
      <input type="text" class="form-control" name="credentials[email]" placeholder="Email">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="credentials[password]" placeholder="Password">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="credentials[password_confirmation]" placeholder="Confirm Password">
    </div>
    <input type="submit" class="btn btn-primary" value=" Sign up! ">
  </fieldset>
</form>

{{/if}}

{{!-- Modal to create new Lists --}}
<div class="modal fade" id="list-create-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="list-create-form">
        <div class="modal-body">
          <input class="form-control" type="text" id="add-title" name="list[title]" placeholder="Add your title here" required />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-warning" id="create-list-button">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>